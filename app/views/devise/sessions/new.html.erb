<div class="col-md-9 offset-3">
    <h2>Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group row">
        <%= f.label :email, :class => 'col-sm-3 col-form-label' %><br />
        <%= f.email_field :email, autofocus: true, :class => 'form-control col-sm-9' %>
      </div>

      <div class="form-group row">
        <%= f.label :password, :class => 'col-sm-3 col-form-label' %><br />
        <%= f.password_field :password, autocomplete: "off", :class => 'form-control col-sm-9' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group offset-3">
          <div class="form-check">
            <%= f.check_box :remember_me, :class => 'form-check-input'  %>
            <%= f.label :remember_me, :class => 'form-check-label' %>
          </div>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", :class => 'btn btn-primary' %>
      </div>
    <% end %>

    <% render "devise/shared/links" %>
</div>
