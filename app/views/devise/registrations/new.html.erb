<div class="col-md-9 offset-3">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group row">
        <%= f.label :email, :class => 'col-sm-3 col-form-label' %><br />
        <%= f.email_field :email, autofocus: true, :class => 'form-control col-sm-9' %>
      </div>

      <div class="form-group row">
        <%= f.label :password, :class => 'col-sm-3 col-form-label' %>
        <%= f.password_field :password, autocomplete: "off", :class => 'form-control col-sm-9' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>

      <div class="form-group row">
        <%= f.label :password_confirmation, :class => 'col-sm-3 col-form-label' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control col-sm-9' %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", :class => 'btn btn-primary' %>
      </div>
    <% end %>

    <% render "devise/shared/links" %>
</div>